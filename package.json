{
    "name": "react-native-status-bar-height",
    "version": "1.0.0",
    "description": "React Native plugin to get status bar height for iOS and Android",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "*.podspec",
        "!lib/typescript/example",
        "!ios/build",
        "!android/build",
        "!android/gradle",
        "!android/gradlew",
        "!android/gradlew.bat",
        "!android/local.properties",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__",
        "!**/.*"
    ],
    "scripts": {
        "typescript": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "prepare": "bob build",
        "release": "release-it",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prepack": "bob build",
        "example": "yarn --cwd example",
        "bootstrap": "yarn example && yarn install",
        "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib"
    },
    "keywords": [
        "react-native",
        "ios",
        "android",
        "status-bar",
        "height"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/react-native-status-bar-height.git"
    },
    "author": "Your Name",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/yourusername/react-native-status-bar-height/issues"
    },
    "homepage": "https://github.com/yourusername/react-native-status-bar-height#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@babel/core": "^7.20.0",
        "@babel/runtime": "^7.20.0",
        "@react-native/eslint-config": "^0.72.2",
        "@testing-library/react-native": "^11.5.0",
        "@types/jest": "^29.0.0",
        "@types/react": "^17.0.38",
        "@types/react-native": "^0.67.8",
        "@types/react-test-renderer": "^17.0.1",
        "babel-jest": "^29.0.0",
        "babel-plugin-module-resolver": "^5.0.0",
        "del-cli": "^5.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "metro-react-native-babel-preset": "^0.67.0",
        "pod-install": "^0.1.0",
        "react": "17.0.2",
        "react-native": "0.67.4",
        "react-native-builder-bob": "^0.18.3",
        "react-test-renderer": "17.0.2",
        "typescript": "^4.5.5"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    },
    "eslintConfig": {
        "extends": "@react-native"
    },
    "codegenConfig": {
        "name": "StatusBarHeightModule",
        "type": "modules",
        "jsSrcsDir": "src",
        "android": {
            "javaPackageName": "com.reactnativestatusbarheight"
        }
    }
}